@using Kentico.PageBuilder.Web.Mvc
@using Kentico.Web.Mvc

@using BlankSite.Models.PageTemplates.LandingPage

@model LandingPageViewModel

@{
    Layout = "~/Views/Shared/_PageTemplateLayout.cshtml";
}

@{
    // Sets the page title to the name of the current page
    ViewBag.Title = Model.DocumentName;
}

@if (Model.ShowTitle)
{
    <h1>@Model.DocumentName</h1>
}
else
{
    <h1>No titles allowed!</h1>
}

<div>
    <div>
        @Html.Kentico().EditableArea("top")
    </div>
    <div style="background-color: #eeeeee">
        @Html.Kentico().EditableArea("bottom")
    </div>
</div>
